    <com.github.ksoichiro.android.observablescrollview.ObservableScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/detail_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.DetailFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_detail_backdrop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:contentDescription="@string/content_description" />

            <View
                android:id="@+id/anchor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp">
            </View>

            <RelativeLayout
                android:id="@+id/poster_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/anchor">

                <LinearLayout
                    android:id="@+id/detail_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:layout_alignParentLeft="false"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="@dimen/detail_poster_image_width"
                        android:layout_height="@dimen/detail_poster_image_height"
                        android:layout_gravity="bottom|center|right"
                        android:layout_marginLeft="5dp">

                        <ImageView
                            android:id="@+id/iv_detail_poster"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/content_description" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:background="#fffafafa"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|bottom|center"
                            android:layout_weight="9"
                            android:orientation="vertical"
                            android:paddingBottom="5dp"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp">

                            <TextView
                                android:id="@+id/tv_detail_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
                                android:textColor="@android:color/black"
                                tools:text="@string/tools_title"/>

                            <TextView
                                android:id="@+id/tv_detail_releaseDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                tools:text="@string/tools_release_date"/>

                            <TextView
                                android:id="@+id/tv_detail_rating"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                tools:text="@string/tools_rating"/>
                        </LinearLayout>

                        <com.newfobject.popularmovies.ui.views.FavoriteImageView
                            android:id="@+id/detailFavoriteView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|right"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:src="@drawable/favorite_selector"/>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_detail_overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/poster_details"
                android:background="#fffafafa"
                android:padding="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                tools:text="@string/tools_overview" />

            <LinearLayout
                android:id="@+id/trailers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_detail_overview"
                android:background="#fffafafa"
                android:orientation="vertical"
                android:padding="5dp"
                android:visibility="invisible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/trailers_title"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorAccent"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/reviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/trailers"
                android:background="#fffafafa"
                android:orientation="vertical"
                android:padding="5dp"
                android:visibility="invisible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reviews_title"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>

        </RelativeLayout>
    </com.github.ksoichiro.android.observablescrollview.ObservableScrollView>
